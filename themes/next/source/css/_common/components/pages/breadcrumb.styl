ul.breadcrumb {
  font-size: $font-size-smallest;
  list-style: none;
  margin: 1em 0;
  padding: 0 2em;
  text-align: center;

  li {
    /*//不让路径显示出来。display: inline;*/
    display: none;
  }

  li + li::before {
    content: '/\00a0';
    font-weight: normal;
    padding: .5em;
  }

  li + li:last-child {
    font-weight: bold;
  }
}
